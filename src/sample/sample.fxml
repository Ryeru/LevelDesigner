<GridPane maxHeight="600.0" maxWidth="900.0" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="800.0" minWidth="800.0" prefWidth="800.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="600.0" minHeight="600.0" prefHeight="600.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <GridPane style="-fx-background-color: white;" GridPane.columnIndex="1">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#wallAction" text="Wall" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <Button mnemonicParsing="false" onAction="#pinwheelAction" text="Pinwheel" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
            <Button mnemonicParsing="false" onAction="#lavaAction" text="Lava" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
            <Button mnemonicParsing="false" onAction="#bridgeAction" text="Bridge" GridPane.halignment="CENTER" GridPane.rowIndex="7" />
            <Button mnemonicParsing="false" onAction="#elevatorAction" text="Elevator" GridPane.rowIndex="4" />
            <Button mnemonicParsing="false" onAction="#teleporterAction" text="Teleporter" GridPane.rowIndex="3" />
            <Button mnemonicParsing="false" onAction="#rampAction" text="Ramp" />
            <Button mnemonicParsing="false" onAction="#startAction" text="Start" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#finishAction" text="Finish" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" onAction="#exportLevelAction" text="Export Level" GridPane.rowIndex="10" />
            <Separator prefWidth="200.0" GridPane.rowIndex="9" />
         </children>
      </GridPane>
      <AnchorPane>
         <children>
            <Canvas fx:id="canvas" height="600.0" onMouseMoved="#handleMove" onMousePressed="#handleClick" width="800.0" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
